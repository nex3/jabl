

:ready
  // Selector like an "object" set
  $#toolbox
    // Methods
    fun stopHideTimer
      if @timeout
        clearTimeout(@timeout)
        @timeout = null
    fun startHideTimer
      stophideTimer()
      @timeout = setTimeout(disappear, 500)
    fun appear
      stopHideTimer()
      &.tools
        show()
    fun disappear
      &.tools
        hide()
      
    // Events
    :hover appear
    :blur startHideTimer
    &.tools
      :hover appear
      :blur startHideTimer
